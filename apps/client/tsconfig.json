{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@community/*": ["libs/*"],
      "default/*": ["apps/community/src/app/*"],
      "@community/project": ["libs/project/src/index.ts"],
      "@community/home": ["libs/home/src/index.ts"],
      "@community/api": ["libs/api/src/index.ts"],
      "@env/*": ["apps/community/src/environments/*"],
      "@community/auth": ["libs/auth/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
